##############################################################################
# VPN Gateway Values

locals {
  ##############################################################################
  # VPN Gateway
  # > Create a gateway in first vpc if bastion not enabled    
  ##############################################################################

  vpn_gateways = [
    {
      name           = "${var.vpcs[0]}-gateway"
      vpc_name       = "${var.vpcs[0]}"
      subnet_name    = "vpn-zone-1"
      resource_group = "${var.prefix}-${var.vpcs[0]}-rg"
      connections    = []
    }
  ]

  ##############################################################################
}

##############################################################################

##############################################################################
# VPN Gateway Outputs
##############################################################################

output "vpn_gateways" {
  description = "List of gateways for landing zone module"
  value       = local.vpn_gateways
}

